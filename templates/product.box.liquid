      <div class="grid"></div>
      <div class="grid"></div>
      <div class="grid"></div>
      <div class="grid"></div>
      <div class="grid"></div>
      <div class="grid"></div>
      <div class="grid"></div>
      <div class="grid"></div>
    </div>
    <div id="selection-counter">??? of ??? selected</div>
  {% else %}
  <div id="variants">
    <a data-variant-id="{{ variant.id }}" data-variant-title="{{ variant.title }}" href="#">
      <img src="{{ variant.image.src | img_url: '190x' }}" alt="{{ variant.title }}">
      <div class="title">{{ variant.title }}</div>
    </a>
  </div>
  {% endif %}
